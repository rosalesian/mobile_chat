<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/id_addItems_fragment"
    tools:context="com.example.bobster.discount.controller.AddItemFragment"
    android:background="#78909C">



    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_centerInParent="true"
       android:padding="10dp"
       android:background="#4335">

       <EditText
           android:id="@+id/iten_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/edittext_top_bg"
           android:padding="20dp"
           android:textAlignment="center"
           android:hint="Item Name"
           android:paddingBottom="10dp"
           android:textColor="#cccccc"
           android:drawableLeft="@drawable/user"/>

       <EditText
           android:id="@+id/iten_reference"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/edittext_top_bg"
           android:padding="20dp"
           android:textAlignment="center"
           android:hint="Ference Id"
           android:inputType="number"
           android:textColor="#cccccc"
           android:drawableLeft="@drawable/add_customer"/>

       <Button
           android:id="@+id/btn_additen"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:text="ADD ITEM"
           style="@style/DefaultButtonText"
           android:layout_margin="4dp"
           android:background="@drawable/button_default_bg"/>
       <Button
           android:id="@+id/btn_cancel"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:text="CANCEL"
           style="@style/DefaultButtonText"
           android:layout_margin="4dp"
           android:background="@drawable/button_default_bg"/>

      <!-- <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/edittext_top_bg"
           android:padding="1dp"
           android:hint="Iten Name"
           android:textColor="#cccccc"
           android:drawableLeft="@drawable/user"/>-->

   </LinearLayout>



</RelativeLayout>
